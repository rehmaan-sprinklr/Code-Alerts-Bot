{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "Generate Summary Based On a Specific Field different values form",
      "weight": "Bolder",
      "size": "Medium",
      "wrap": true },
    {
      "type": "Input.ChoiceSet",
      "id": "field",
      "placeholder": "Field_Name",
      "choices": [ {"title" : "Environment", "value" : "environment"},
        {"title" : "Partner Id", "value" : "partnerId"},
        {"title" : "Host Info", "value" : "hostInfo"}
      ]
    , "isRequired": true,
      "errorMessage": "Field cannot be empty"
    },
    {
      "type": "Input.Number",
      "id": "days",
      "placeholder": "Number_of_days"
    }], "actions": [
  {
    "type": "Action.Submit",
    "title": "Send"
  }
],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}
